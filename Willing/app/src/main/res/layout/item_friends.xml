<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_friends_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/mp_profile_image_view"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삼닷우"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_friends_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="samdotu@gmail.com"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/item_friends_cheerupBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="응원하기"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>